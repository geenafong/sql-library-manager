extends layout.pug

block content
  .main.container
    .row
        h1.display-4.m-b-2 New Book

        // Book form
        form(method='POST' action='/books')
          div.form-group
            label(for='title') Title:
            input#title.form-control(type='text', title='title' value=book.title)
          div.form-group
            label(for='author') Author:
            input#author.form-control(type='text', author='author' value=book.author)
          div.form-group
            label(for='genre') Genre:
            input#genre.form-control(type='text', genre='genre' value=book.genre)
          div.form-group
            label(for='year') Year:
            input#year.form-control(type='text', year='year' value=book.year)
          button.btn.btn-primary(type='submit') Create New Book
          p.
          a(href="/books") Cancel
